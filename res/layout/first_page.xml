<?xml version="1.0" encoding="UTF-8"?>
<!-- первое окно: окно с генерацией случайных картинок -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"
    android:background = "#1d3557"
    android:padding = "@dimen/_10sdp">
    
    <LinearLayout 
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical"
        android:background = "#f1faee"
        android:padding = "@dimen/_10sdp">
        
        <!-- картинки -->
        <ImageView
            android:id = "@+id/imageNumber"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:background = "@null"
            android:src = "@drawable/random" />
        
        <!-- фрагмент, состоящий из кнопок -->
        <fragment
            android:name = "com.example.myapplication_2020_24.firstpage.FirstPageFirstFragment"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
  			android:id = "@+id/secondFragment"
  			android:layout_weight = "1"
  			tools:layout = "@layout/firstpage_first_fragment"/>
        
    </LinearLayout>
    
</LinearLayout>